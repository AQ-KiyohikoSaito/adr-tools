#!/bin/bash
set -e
eval "$($(dirname $0)/adr-config)"

## usage: adr generate toc [-i INTRO] [-o OUTRO] [-r]
##
## Generates a table of contents in Markdown format to stdout.
##
## Options:
##
## -i INTRO  precede the table of contents with the given INTRO text.
## -o OUTRO  follow the table of contents with the given OUTRO text.
## -r        use full relative path to decision files, as determined by adr-list.
##
## Both INTRO and OUTRO must be in Markdown format.

args=$(getopt i:o:r $*)
set -- $args

for arg
do
    case "$arg"
    in
        -i)
            intro="$2"
            shift 2
            ;;
        -o)
            outro="$2"
            shift 2
            ;;
        -r)
            relative=true
            shift 1
            ;;
        --)
            shift
            break
            ;;
    esac
done

cat <<EOF
# Architecture Decision Records

EOF

if [ ! -z $intro ]
then
    cat "$intro"
    echo
fi

for f in $("$adr_bin_dir/adr-list")
do
    title=$("$adr_bin_dir/_adr_title" $f)
    link=$([ "$relative" = true ] && echo "$f" || echo $(basename $f))

    echo "* [$title]($link)"
done

if [ ! -z $outro ]
then
    echo
    cat "$outro"
fi
